@page
@model Bankapp.Pages.Customers.CustomerDetailsModel
@{
    ViewData["Title"] = "Kundbild";
}

<section class="page-section bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="section-heading text-uppercase">Kundbild</h2>
        </div>

        <div class="card-body">
            <h5 class="card-title">Kundinformation</h5>
            <p><strong>Kundnummer:</strong> @Model.Customer.CustomerId</p>
            <p><strong>Personnummer:</strong> @Model.Customer.NationalId</p>
            <p><strong>Namn:</strong> @Model.Customer.Givenname @Model.Customer.Surname</p>
            <p><strong>Adress:</strong> @Model.Customer.Streetaddress, @Model.Customer.City</p>
            <p><strong>Totalt saldo:</strong> @Model.Customer.TotalBalance.ToString("C")</p>
        </div>


        <h5>Konton</h5>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Kontonummer</th>
                    <th>Frekvens</th>
                    <th>Saldo</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in Model.Customer.Accounts)
                {
                    <tr>
                        <td>@account.AccountId</td>
                        <td>@account.Frequency</td>
                        <td>@account.Balance.ToString("C")</td>
                        <td>
                            <a class="btn btn-primary btn-sm" href="/Accounts/Details?accountId=@account.AccountId">Visa konto</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a class="btn btn-secondary" href="/Customers/Search">Tillbaka till sökning</a>
    </div>
</section>
