@page
@model Bankapp.Pages.Accounts.TransferModel
@{
    ViewData["Title"] = "Hantera Transaktion";
}

<section class="page-section bg-light">
    <div class="container">
        <div class="text-center mb-4">
            <h2 class="section-heading text-uppercase">Transaktion</h2>
            <h3 class="section-subheading text-muted">Genomför en insättning, uttag eller överföring</h3>
        </div>

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="alert alert-info">@Model.Message</div>
        }

        <form method="post" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">Typ av transaktion</label>
                <select class="form-select" asp-for="TransactionType" id="transactionType">
                    <option value="Deposit">Insättning</option>
                    <option value="Withdraw">Uttag</option>
                    <option value="Transfer">Överföring</option>
                </select>
            </div>

            <div class="col-md-4 d-none" id="fromAccountGroup">
                <label class="form-label">Från konto</label>
                <input class="form-control" asp-for="FromAccountId" />
            </div>

            <div class="col-md-4 d-none" id="toAccountGroup">
                <label class="form-label">Till konto</label>
                <input class="form-control" asp-for="ToAccountId" />
            </div>

            <div class="col-md-4">
                <label class="form-label">Belopp</label>
                <input class="form-control" asp-for="Amount" />
            </div>

            <div class="col-12">
                <button type="submit" class="btn btn-primary">Genomför</button>
                <a href="/Customers/Search" class="btn btn-secondary ms-2">Tillbaka till kundsök</a>
            </div>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        function toggleAccountFields() {
            const type = document.getElementById("transactionType").value;
            document.getElementById("fromAccountGroup").classList.add("d-none");
            document.getElementById("toAccountGroup").classList.add("d-none");

            if (type === "Withdraw") {
                document.getElementById("fromAccountGroup").classList.remove("d-none");
            } else if (type === "Deposit") {
                document.getElementById("toAccountGroup").classList.remove("d-none");
            } else if (type === "Transfer") {
                document.getElementById("fromAccountGroup").classList.remove("d-none");
                document.getElementById("toAccountGroup").classList.remove("d-none");
            }
        }

        document.getElementById("transactionType").addEventListener("change", toggleAccountFields);
        window.addEventListener("DOMContentLoaded", toggleAccountFields);
    </script>
}
